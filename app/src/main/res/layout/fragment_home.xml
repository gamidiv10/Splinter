<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorLayerBack">
            <TextView
                android:id="@+id/home_owes_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/owes_you"
                android:layout_marginLeft="30dp" />
            <TextView
                android:id="@+id/home_owed_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/owed_you"/>
            <TextView
                android:id="@+id/home_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="@string/amount_total"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/colorLayerBack">
                <TextView
                    android:id="@+id/home_owes_you_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_owes_you"
                    android:layout_marginLeft="30dp"
                    android:text="0"/>
                <TextView
                    android:id="@+id/home_owed_you_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/home_owed_you"
                    android:layout_marginLeft="120dp"
                    android:text="0"/>
                <TextView
                    android:id="@+id/home_total_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below = "@id/home_total"
                    android:layout_marginLeft="120dp"
                    android:text="0"/>
            </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </androidx.cardview.widget.CardView>
        </LinearLayout>


    <include
        layout="@layout/home_screen_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


</androidx.coordinatorlayout.widget.CoordinatorLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout_bills"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:clickable="true"
    android:layout_marginBottom="1dp"

    android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
<!--Layout for bills in Home page-->
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/bill_image"
        android:src="@drawable/bill_icon"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        />
    <TextView
        android:id="@+id/tv_bill_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vamsi"
        android:textSize="22dp"
        android:width="110dp"
        android:layout_toRightOf="@+id/account_image"
        android:layout_centerVertical="true"
        android:layout_marginStart="60dp"
        android:inputType="textMultiLine"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_bill_amount"
        android:width="70dp"
        android:inputType="numberDecimal"
        android:layout_toRightOf="@+id/tv_bill_name"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="40dp"
        android:layout_centerVertical="true"
        android:textSize="22dp"
        android:text="0.0"/>

    <ImageButton
        android:id="@+id/delete_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/edit_participant_button"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:src="@drawable/delete_icon" />
    />
</RelativeLayout>
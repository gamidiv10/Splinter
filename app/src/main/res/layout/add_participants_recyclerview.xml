<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/parent_layout_participants"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:padding="15dp"
    android:theme="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
<!--Layout for participant functionality-->
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/account_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:src="@drawable/account" />
    <!--Textview for firstname-->
    <TextView
        android:id="@+id/tv_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="10dp"
        android:layout_toRightOf="@+id/account_image"
        android:width="70dp"
        android:inputType="textMultiLine"
        android:text="Vamsi"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/tv_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="10dp"
        android:layout_toRightOf="@+id/tv_first_name"
        android:width="70dp"
        android:inputType="textMultiLine"
        android:text="Gamidi"
        android:textSize="22dp" />

<!--Button to edit the participant-->
    <ImageButton
        android:id="@+id/edit_participant_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@+id/tv_last_name"

        android:backgroundTint="@color/cardview_shadow_end_color"
        android:src="@drawable/edit_icon" />
<!--Button to delete the participant-->
    <ImageButton
        android:id="@+id/delete_participant_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/edit_participant_button"
        android:backgroundTint="@color/cardview_shadow_end_color"
        android:src="@drawable/delete_icon" />

</RelativeLayout>